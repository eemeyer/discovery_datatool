<config
  xmlns="http://transparensee.com/schema/datatool-config-4"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation=
    "http://transparensee.com/schema/datatool-config-4
     http://transparensee.com/schema/datatool-config-4.xsd">
  <dataSources>
    <driver name="dataSource"
      class="org.apache.derby.jdbc.EmbeddedDriver">
      <url>jdbc:derby:memory:test;create=true</url>
    </driver>
  </dataSources>

  <profiles>
    <sqlProfile name="sqlProfile" dataSource="dataSource">
      <retrieveSql startColumn="startTime" endColumn="endTime">
        select lastRun as startTime, CURRENT_TIMESTAMP as endTime from BulkAndFullChangesetTestProfile where name = :name
      </retrieveSql>
      <updateSql>
        update BulkAndFullChangesetTestProfile set lastRun = :lastRun where name = :name
      </updateSql>
    </sqlProfile>
  </profiles>

  <publishers>
    <createItemOnlySqlPublisher name="test-bulk" dataSource="dataSource" profile="sqlProfile" type="bulk">
      <action idColumn="id">
        <query><![CDATA[
          select * from IntegrationContent where lastUpdated < :end
        ]]></query>
      </action>
    </createItemOnlySqlPublisher>
    <createItemOnlySqlPublisher name="test-full" dataSource="dataSource" profile="sqlProfile" type="full">
      <action idColumn="id">
        <query><![CDATA[
          select * from IntegrationContent where lastUpdated < :end
        ]]></query>
      </action>
    </createItemOnlySqlPublisher>
    <createItemOnlySqlPublisher name="test-create-snapshot" dataSource="dataSource" profile="sqlProfile" type="snapshot">
      <action idColumn="id">
        <query><![CDATA[
          select * from IntegrationContent where lastUpdated < :end
        ]]></query>
      </action>
    </createItemOnlySqlPublisher>
    <sqlPublisher name="test-snapshot" dataSource="dataSource" profile="sqlProfile">
      <action type="create" filter="snapshot" idColumn="id">
        <query>
          select * from IntegrationContent
        </query>
      </action>
      <action type="delete" filter="snapshot" idColumn="id">
        <query>
          select id from IntegrationDeleted
        </query>
      </action>
    </sqlPublisher>
  </publishers>
</config>
