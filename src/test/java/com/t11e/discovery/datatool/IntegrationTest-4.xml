<?xml version="1.0" encoding="utf-8"?>
<config xmlns="http://transparensee.com/schema/datatool-config-4" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://transparensee.com/schema/datatool-config-4          http://transparensee.com/schema/datatool-config-4.xsd">
  <dataSources>
    <driver name="dataSource" class="org.apache.derby.jdbc.EmbeddedDriver">
      <url>jdbc:derby:memory:test;create=true</url>
    </driver>
  </dataSources>
  <profiles>
    <sqlProfile name="sqlProfile" dataSource="dataSource">
      <retrieveSql startColumn="startTime" endColumn="endTime"><![CDATA[
        select lastRun as startTime, CURRENT_TIMESTAMP as endTime from IntegrationProfile where name = :name
      ]]></retrieveSql>
      <updateSql><![CDATA[
        update IntegrationProfile set lastRun = :lastRun where name = :name
      ]]></updateSql>
    </sqlProfile>
  </profiles>
  <publishers>
    <sqlPublisher name="test" dataSource="dataSource" profile="sqlProfile">
      <snapshot>
        <set-item idColumn="id">
          <query><![CDATA[
          select * from IntegrationContent
        ]]></query>
        </set-item>
        <remove-item idColumn="id">
          <query><![CDATA[
          select id from IntegrationDeleted
        ]]></query>
        </remove-item>
      </snapshot>
      <delta>
        <set-item idColumn="id">
          <query><![CDATA[
          select * from IntegrationContent where lastUpdated >= :start and lastUpdated < :end
        ]]></query>
        </set-item>
        <remove-item idColumn="id">
          <query><![CDATA[
          select id from IntegrationDeleted where lastUpdated >= :start and lastUpdated < :end
        ]]></query>
        </remove-item>
      </delta>
    </sqlPublisher>
    <sqlPublisher name="test-all" dataSource="dataSource" profile="sqlProfile">
      <snapshot>
        <set-item idColumn="id">
          <query><![CDATA[
          select * from IntegrationContent
        ]]></query>
        </set-item>
        <remove-item idColumn="id">
          <query><![CDATA[
          select id from IntegrationDeleted
        ]]></query>
        </remove-item>
      </snapshot>
    </sqlPublisher>
    <sqlPublisher name="test-xml-escaping" dataSource="dataSource" profile="sqlProfile">
      <snapshot>
        <set-item idColumn="id">
          <query><![CDATA[
          select * from IntegrationTextContent
        ]]></query>
        </set-item>
      </snapshot>
    </sqlPublisher>
    <sqlPublisher name="test-stored-proc" dataSource="dataSource" profile="sqlProfile">
      <snapshot>
        <set-item idColumn="id">
          <query><![CDATA[
          call IntegrationContentSP(null, null)
        ]]></query>
        </set-item>
        <remove-item idColumn="id">
          <query><![CDATA[
          select id from IntegrationDeleted
        ]]></query>
        </remove-item>
      </snapshot>
      <delta>
        <set-item idColumn="id">
          <query><![CDATA[
          call IntegrationContentSP(:start, :end)
        ]]></query>
        </set-item>
      </delta>
    </sqlPublisher>
  </publishers>
</config>
