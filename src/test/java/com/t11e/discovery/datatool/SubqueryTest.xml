<?xml version="1.0" encoding="utf-8"?>
<config xmlns="http://transparensee.com/schema/datatool-config-4" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://transparensee.com/schema/datatool-config-4          http://transparensee.com/schema/datatool-config-4.xsd">
  <dataSources>
    <driver name="dataSource" class="org.apache.derby.jdbc.EmbeddedDriver">
      <url>jdbc:derby:memory:test;create=true</url>
    </driver>
  </dataSources>
  <publishers>
    <sqlPublisher name="test-snapshot-varchar" dataSource="dataSource">
      <snapshot>
        <set-item idColumn="id">
          <query><![CDATA[
          select * from SubqueryContent
        ]]></query>
          <subquery field="color" type="delimited"><![CDATA[
          select name from SubqueryColors where parent_id=:id order by name
        ]]></subquery>
          <subquery field="color-default"><![CDATA[
          select name from SubqueryColors where parent_id=:id order by name
        ]]></subquery>
          <subquery field="color-array" type="array"><![CDATA[
          select name from SubqueryColors where parent_id=:id order by name
        ]]></subquery>
          <subquery field="color-delimited" type="delimited" delimiter="|"><![CDATA[
          select name from SubqueryColors where parent_id=:id order by name
        ]]></subquery>
        </set-item>
        <remove-item idColumn="id">
          <query><![CDATA[
          select id from SubqueryDeleted
        ]]></query>
        </remove-item>
      </snapshot>
    </sqlPublisher>
    <sqlPublisher name="test-snapshot-int" dataSource="dataSource">
      <snapshot>
        <set-item idColumn="id">
          <query><![CDATA[
          select * from SubqueryContent
        ]]></query>
          <subquery field="color" type="delimited"><![CDATA[
          select asnumber from SubqueryColors where parent_id=:id order by name
        ]]></subquery>
        </set-item>
        <remove-item idColumn="id">
          <query><![CDATA[
          select id from SubqueryDeleted
        ]]></query>
        </remove-item>
      </snapshot>
    </sqlPublisher>
    <sqlPublisher name="test-snapshot-timestamp" dataSource="dataSource">
      <snapshot>
        <set-item idColumn="id">
          <query><![CDATA[
          select * from SubqueryContent
        ]]></query>
          <subquery field="color" type="delimited"><![CDATA[
          select asdate from SubqueryColors where parent_id=:id order by name
        ]]></subquery>
        </set-item>
        <remove-item idColumn="id">
          <query><![CDATA[
          select id from SubqueryDeleted
        ]]></query>
        </remove-item>
      </snapshot>
    </sqlPublisher>
    <sqlPublisher name="test-snapshot-invalid" dataSource="dataSource">
      <snapshot>
        <set-item idColumn="id">
          <query><![CDATA[
          select * from SubqueryContent
        ]]></query>
          <subquery field="color" type="delimited"><![CDATA[
          select * from SubqueryColors where parent_id=:id order by name
        ]]></subquery>
        </set-item>
        <remove-item idColumn="id">
          <query><![CDATA[
          select id from SubqueryDeleted
        ]]></query>
        </remove-item>
      </snapshot>
    </sqlPublisher>
  </publishers>
</config>
